{
  "name": "schedule-management-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "prettier": "prettier --cache --write **/*.{ts,tsx}",
    "commit": "./node_modules/cz-customizable/standalone.js",
    "lint-staged": "npx lint-staged",
    "prepare": "husky"
  },
  "dependencies": {
    "next": "15.1.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "add": "^2.0.6",
    "commitizen": "^4.3.1",
    "cz-customizable": "^7.3.0",
    "eslint": "^9",
    "eslint-config-next": "15.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "postcss": "^8",
    "prettier": "^3.4.2",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  },
  "config": {
    "commitizen": {
      "path": "cz-customizable"
    },
    "cz-customizable": {
      "config": ".cz-config.js"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npx eslint --fix --ignore-pattern .next/",
      "prettier --cache --write **/*.{ts,tsx}"
    ]
  }
}
